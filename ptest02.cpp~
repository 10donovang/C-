float getCostPerCup()
{
   float cost;
   cout << "Enter the cost per cup: \t";
   cin >> cost;
   return cost;
}

float getRevenuePerCup()
{
   float revenue;
   cout << "\tEnter the revenue per cup: ";
   cin >> revenue;
   cout << endl;
   return revenue;
}

int getTotalCups()
{
   int total = 0;
   int cups = 0;
   do
   {
      total += cups;
      int i = 1;
      cout << "\tEnter the cups sold on day " << i << ":";
      cin << cups;
      
   }
   while(cups != -1);
   cout << endl << "\tTotal cups sold: " << total <<endl;
   return total;
}

void displayResults(int total, float cost, float revenue)
{
   float revTotal = revenue * total;
   float costTotal = cost * total;
   float totalProfit = revTotal - costTotal;
   
      cout << left << setw(14) << "Total Revenue:"
           << right << setw(12) << revTotal << endl
           << left << setw(14) << "Total Cost:" endl
           << right << setw(12) << costTotal <<endl
        << "\t=========================\n"
           << left << setw(14) << "Total Profit:"
           << right << setw(12) << totalProfit <<endl;
}
                    
int main()
{
   float cost = getCostPerCup();
   float revenue = getRevenuePerCup();
   int total = getTotalCups();
   void displayResults(int total, float cost, float revenue);
